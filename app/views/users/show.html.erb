<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-9">
  <p>| machine no. | username | type | cpu | memory | created time |</p> 
    <% if @user.machines.any? %>
      <ol class="machines">
        <%= render @machines %>
      </ol>
    <% end %>
  </div>
</div>
